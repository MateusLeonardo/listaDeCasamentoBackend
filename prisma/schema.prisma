generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String         @id @default(uuid()) @map("id")
  name        String
  email       String         @unique
  password    String?
  isAdmin     Boolean        @default(false)
  picture     String?
  guest       Guests?        @relation(fields: [guestId], references: [id])
  guestId     String?        @unique
  providers   AuthProvider[] @relation("UserProviders")

  @@map("users")
}

model AuthProvider {
  id          String   @id @default(uuid()) @map("id")
  provider    String
  providerId  String   @unique
  user        User     @relation("UserProviders", fields: [userId], references: [id])
  userId      String

  @@map("auth_providers")
}

model Guests {
  id          String  @id @default(uuid()) @map("id")
  telefone    String
  isConfirmed Boolean @default(false)
  User        User?

  companions Companions[]

  @@map("guests")
}

model Companions {
  id          String  @id @default(uuid()) @map("id")
  name        String  @unique
  isConfirmed Boolean @default(false)
  guest       Guests  @relation(fields: [guestId], references: [id])
  guestId     String

  @@map("companions")
}
